{
    "name": "@spectrum/api-server",
    "version": "1.2.0",
    "description": "Api Server",
    "main": "dist/index.js",
    "scripts": {
        "watch": "tsc --watch",
        "build": "tsc",
        "start": "node dist/index.js",
        "dev:start": "nodemon dist/index.js",
        "dev": "concurrently \"npm run watch\" \"npm run dev:start\" --names \"TS WATCH,SERVER\" -c \"bgBlue.bold,bgGreen.bold\" --prefix \"[{time}]-[{name}] >\"",
        "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
        "mtgen": "mtgen ./src/models/**/*.model.ts"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.30.0",
        "colors": "^1.4.0",
        "compression": "^1.7.4",
        "concurrently": "^7.2.1",
        "cors": "^2.8.5",
        "dotenv-safe": "^8.2.0",
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "express-async-handler": "^1.2.0",
        "geoip-lite": "^1.4.5",
        "helmet": "^5.1.0",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "6.3.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "multer-storage-cloudinary": "^4.0.0",
        "nodemailer": "^6.7.5",
        "qrcode": "^1.5.0",
        "sentence-case": "^3.0.4",
        "speakeasy": "^2.0.0",
        "ua-parser-js": "^1.0.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.13",
        "@types/geoip-lite": "^1.4.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.0.0",
        "@types/nodemailer": "^6.4.4",
        "@types/qrcode": "^1.4.2",
        "@types/speakeasy": "^2.0.7",
        "@types/ua-parser-js": "^0.7.36",
        "gen-env-types": "^1.3.4",
        "mongoose-tsgen": "^9.0.6",
        "nodemon": "^2.0.16",
        "typescript": "^4.7.3"
    },
    "license": "MIT"
}
